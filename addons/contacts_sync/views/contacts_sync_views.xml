<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_contact_sync" model="ir.actions.act_window">
        <field name="name">Configuración de Sincronizaciones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contacts.sync</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agrega tu primera sincronización
            </p>
        </field>
    </record>
    <record model="ir.ui.view" id="contact_sync_form">
        <field name="name">contacts.sync.form</field>
        <field name="model">contacts.sync</field>
        <field name="arch" type="xml">
            <!-- view content: <form>, <tree>, <graph>, ... -->
            <form string="Idea Form">
                <header style="display: flex; padding: 24px;">
                    <h1>Acciones:</h1>
                    <button string="Sincronizar todos"
                            type="object"
                            name="sync_all_contacts"
                    />
                    <button string="Habilitar Masivo"
                            type="object"
                            name="set_massive_available"
                    />

                    <button string="Habilitar Atómico"
                            type="object"
                            name="set_atomic_available"
                    />
                    <button string="Activar"
                            type="object"
                            name="set_active_current"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nombre"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="oe_api_url" style="display: flex; width: 100%;">
                        <label for="api_url" class="oe_edit_only" string="Api URL"/>
                        <h2 style="flex-grow:1;">
                            <field style="display:flex; width: 100%" name="api_url"/>
                        </h2>
                    </div>
                    <div class="oe_api_url">
                        <label for="api_username" class="oe_edit_only" string="Usuario de Api"/>
                        <h2>
                            <field name="api_username"/>
                        </h2>
                    </div>
                    <div class="oe_api_url">
                        <label for="api_password" class="oe_edit_only" string="Contraseña de Api"/>
                        <h2>
                            <field name="api_password"/>
                        </h2>
                    </div>
                    <div class="oe_api_url">
                        <label for="sync_type" string="Tipo de sincronización"/>
                        <h2>
                            <field attrs="{'readonly':(True)}" name="sync_type"/>
                        </h2>
                    </div>

                    <div class="oe_api_url">
                        <label for="is_current_active" string="Está activo:"/>
                        <h2>
                            <field attrs="{'readonly':(True)}" name="is_current_active"/>
                        </h2>
                    </div>

                    <separator string="Ayuda" colspan="2"/>
                    <group colspan="2" col="2">
                        <field
                                attrs="{'readonly':(True)}"
                                name="description"
                                placeholder="Ayuda..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="contact_kanban_view" model="ir.ui.view">
        <field name="name">contacts.sync.kanban</field>
        <field name="model">contacts.sync</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="is_current_active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override">
                            <div class="oe_kanban_body" style="display:flex; flex-direction: column">
                                <div style="display: flex; width: 100%">
                                    <h2>
                                        <field name="name"/>
                                    </h2>
                                </div>

                                <div style="display: flex;margin: 12px 0px; align-items: end;">
                                    <div style="display: flex; flex-grow:1;">
                                        <strong>
                                            <t t-if="record.is_current_active.raw_value">
                                                <strong style="display: flex;color: #044c45;background-color: #94feac;padding: 1px 7px;font-size: small;font-weight: 400;">
                                                    Activo
                                                </strong>
                                            </t>
                                        </strong>
                                    </div>
                                    <div syle="display: flex;">
                                        <a style="display: flex;background-color: #d4165c;color: white;justify-content: center;align-items: center;padding: 4px 12px;border-radius: 5px;font-size: medium;font-weight: 500;" type="open">
                                            ABRIR
                                        </a>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- MENU -->
    <menuitem id="contact_sync_root" name="Sincronizar Contactos" sequence="1"/>
    <menuitem
            id="contact_sync_syncs"
            name="Sincronizaciones"
            parent="contact_sync_root"
            action="action_contact_sync"/>
</odoo>