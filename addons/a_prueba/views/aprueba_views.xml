<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">a_prueba.a_prueba</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first Patient
            </p>
        </field>
    </record>

    <record model="ir.ui.view" id="patient_form">
        <field name="name">a_prueba.a_prueba.patient.form</field>
        <field name="model">a_prueba.a_prueba</field>
        <field name="arch" type="xml">
            <!-- view content: <form>, <tree>, <graph>, ... -->
            <!--<form string="Idea form">
                <group colspan="4">
                    <group colspan="2" col="2">
                        <separator string="Datos" colspan="2"/>
                        <field name="name"/>
                        <field name="value"/>
                    </group>

                    <notebook colspan="4">
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </group>
            </form>-->

            <form string="Idea Form">
                <header>
                    <h1>HEADER</h1>
                   <!-- <button string="Confirm" type="object" name="action_confirm"
                            states="draft" class="oe_highlight"/>
                    <button string="Mark as done" type="object" name="action_done"
                            states="confirmed" class="oe_highlight"/>
                    <button string="Reset to draft" type="object" name="action_draft"
                            states="confirmed,done"/>-->
                    <button string="Sync Contacts"
                            type="object"
                            name="sync_contacts"
                            />
                    <button string="Available Massive"
                            type="object"
                            name="set_massive_available"
                            />

                    <button string="Available Atomic"
                            type="object"
                            name="set_atomic_available"
                            />

                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Idea Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="oe_value">
                        <label for="name" class="oe_edit_only" string="Idea Value"/>
                        <h1>
                            <field name="value"/>
                        </h1>
                    </div>
                    <separator string="General" colspan="2"/>
                    <group colspan="2" col="2">
                        <field name="description" placeholder="Idea description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Top menu item -->
    <menuitem
            id="aprueba_root"
            name="Aprueba"
            sequence="0"
            web_icon="contacts_sync,static/description/icon.svg"
    />
    <menuitem
            id="aprueba_detail"
            name="Detalle"
            parent="aprueba_root"
            action="action_patient"/>

</odoo>
