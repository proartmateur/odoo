<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_order_view_pos_config" model="ir.ui.view">
                <field name="name">sale.order.form.inherit.sale.product.pos.config</field>
                <field name="model">sale.order</field>
                <field name="inherit_id" ref="sale.view_order_form"/>
                <field name="arch" type="xml">
                        <field name='payment_term_id' position='after'>
                                <field name='is_for_pos' attrs="{'invisible': [('state', 'not in', ('draft', 'sent'))]}"/>
                                <field name='pos_config_ids' attrs="{'invisible': [('is_for_pos', '==', False)]}"/>
                                
                        </field>
                        <xpath expr="//tree/field[@name='price_unit']" position="before">
                                <field name='set_employee'/>
                        </xpath>
                       <!--  <xpath expr="//field[@name='price_unit']" position="before">
                                <field name='set_employee'/>
                        </xpath> -->
                </field>
        </record>
        <record id="hr_employee_view_form_salespertion" model="ir.ui.view">
                <field name="name">hr.employee.view.form.inherit.salespertion</field>
                <field name="model">hr.employee</field>
                <field name="inherit_id" ref="hr.view_employee_form"/>
                <field name="arch" type="xml">
                        <field name='pin' position='after'>
                                <field name='is_sale_person'/>
                        </field>
                </field>
        </record>
       

        
</odoo>