<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

  <t t-name="pedidos.ConfirmationDialog2" owl="1">
    <Dialog size="'md'" title="props.title" modalRef="modalRef">
      <div>
        <t t-esc="props.body" />
          <div style='display: flex;padding-top: 10px;'>
            <span style='margin-right: 20px;font-weight: 600;'>Quantity : </span>
            <input type='number' class='qty' style='width: 80px;margin-right: 30px;border-top: transparent;border-left: transparent;border-right: transparent;' t-on-input="onKeyDownQty" required='required' t-ref="autofocus"/>
            <t t-esc='props.uom'/>
          </div>
         <div style='display: flex;'>
            <span style='margin-right: 20px;font-weight: 600;'>Note : </span>
            <input type='text' class='note' style='width: 180px;border-top: transparent;border-left: transparent;border-right: transparent;' t-on-input="onKeyDownNote"/>
         </div>
      </div>
      <t t-set-slot="footer" owl="1">
        <button class="btn btn-primary" t-on-click="_confirm" t-esc="props.confirmLabel"/>
        <button t-if="props.cancel" class="btn btn-secondary" t-on-click="_cancel" t-esc="props.cancelLabel"/>
      </t>
    </Dialog>
  </t>

  

</templates>