<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="pedidos_request_view_form">
        <field name="name">pedidos.request.form</field>
        <field name="model">request.pedidos</field>
        <field name="arch" type="xml">
            <form string="Pedidos" class="o_event_form_view">
                <header>
                    <button name="create_sale_order" class="oe_highlight" type="object" string="Create Sale Order" groups="sales_team.group_sale_manager" attrs="{'invisible' : [('order_count', '>', 0)]}"/>
                    <button name="approve_pedido" groups="pedidos.group_is_pedidos" class="oe_highlight" type="object" string="Approve Pedidos"  />
                    <field name="state" widget="statusbar" />
                    <!-- <button name="create_sale_order" type="object" string="Create Sale Order"
                        attrs="{'invisible' : ['|', ('rescue', '=', True), ('state', 'not in', ['opening_control', 'opened'])]}"/> -->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_order"
                            class="oe_stat_button"
                            icon="fa-shopping-basket"
                            type="object">
<!--                            <field name="order_count" widget="statinfo" string="Orders" invisible="1"/>-->
                            <field name="sale_amt_total" widget="statinfo" string="Total Amount"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name='partner_id' attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='phone' attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='email' attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='etapa' readonly='1' force_save='1'/>
                            <field name='expected_delivered_date' attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='company_id' invisible='1'/>
                        </group>
                        <group>
                            <field name='date' attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='pricelist_id' groups="sales_team.group_sale_manager" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='note' attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='pos_config_ids' attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            <field name='order_count' invisible="1"/>
                            <field name='sum_of_kg' invisible="0"/>
                            <field name='sum_of_unit' invisible="0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pedidos Lines">
                            <field name="order_line_ids" attrs="{'readonly': [('state', '!=', 'new')]}">
                                <tree string="Pedidos Line ids" editable="bottom">
                                    <field name="product_id" />
                                    <field name="name" />
                                    <field name='product_uom_qty'/>
                                    <field name="price" />
                                    <field name='tax_id' widget="many2many_tags"/>
                                    <field name='price_subtotal'/>
                                    <field name='product_uom' invisible='1'/>
                                    <!-- <field name="sequence" /> -->
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" >
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_total" />
                                </div>
                                <field name="amount_total"
                                   force_save="1"
                                   nolabel="1"
                                   class="oe_subtotal_footer_separator"
                                   widget="monetary"/>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="pedidos_request_view_tree" model="ir.ui.view">
        <field name="name">pedidos.request.tree</field>
        <field name="model">request.pedidos</field>
        <field name="arch" type="xml">
            <tree string="Pedidos Order Tree" decoration-info="etapa == 'Nuevo'" decoration-primary="etapa == 'En preparaciÃ³n'" decoration-success="etapa == 'Enviado'"  decoration-danger="etapa == 'En ruta'" decoration-bf="etapa == 'Entregado'" >
                <field name='etapa' invisible='1'/>
                <field name='name'/>
                <field name='partner_id'/>
                <field name='date'/>
                <field name='amount_total'/>
            </tree>
        </field>
    </record>
    
    <record id="view_pedidos_search" model="ir.ui.view">
        <field name="name">pedidos.request.tree.search.view</field>
        <field name="model">request.pedidos</field>
        <field name="arch" type="xml">
            <search string="Request Pedidos">
                <field name="name"/>
                <!-- <field name="config_id" />
                <field name="user_id" />
                <filter name="my_sessions" string="My Sessions" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter name="open_sessions" string="In Progress" domain="[('state', '=', 'opened')]"/>
                <separator/> -->
               <!--  <filter string="Opening Date" name="start_date" date="start_at" /> -->
                <group expand="0" string="Group By">
                    <filter string="Point Of Sale" name="pos_pedidos" domain="[]" context="{'group_by' : 'pos_config_ids'}"/>
                    <filter string="Partner" name="partenr_pedidos" domain="[]" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pedidos_request_action" model="ir.actions.act_window">
        <field name="name">My Pedidos</field>
        <field name="res_model">request.pedidos</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_pedidos_search"/>
        <field name="context">{"search_default_is_mine":1, "search_default_group_by_date": 1, 'show_reorder_button': True}</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_empty_folder">
            No previous order found
        </p><p>
            There is no previous order recorded. Click on "My Pedidos" and then create a new pedidos order.
        </p>
        </field>
    </record>

    <record id="pedidos_request_graph_action" model="ir.actions.act_window">
        <field name="name">My Pedidos Graph</field>
        <field name="res_model">request.pedidos</field>
        <field name="view_mode">graph,tree</field>
        <field name="search_view_id" ref="view_pedidos_search"/>
        <field name="help" type="html">
        <p class="o_view_nocontent_empty_folder">
            No previous order found
        </p>
        </field>
    </record>

    <record id="pedidos_request_view_graph" model="ir.ui.view">
        <field name="name">pedidos.request.tree.graph</field>
        <field name="model">request.pedidos</field>
        <field name="arch" type="xml">
            <graph string="Graph" sample="1">
                <field name="pos_config_ids"/>
                <field name='partner_id'/>
                <field name='amount_total' type="measure"/>
            </graph>
        </field>
    </record>

    

</odoo>
