<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_pedidos_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        
        <t t-set="address">
            <div t-field="doc.partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
            <p t-if="doc.partner_id.vat"><t t-out="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
        </t>
        
        <div class="page">
            <div class="oe_structure"/>

            <h2 class="mt-4">
                <span>Pedidos # </span>
                <span t-field="doc.name"/>
            </h2>

            <div class="row mt-4 mb-4" id="informations">
                
                <div t-if="doc.date" class="col-auto col-3 mw-100 mb-2" name="informations_date">
                    <strong>Order Date:</strong>
                    <p class="m-0" t-field="doc.date" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                    <strong>Salesperson:</strong>
                    <p class="m-0" t-field="doc.user_id"/>
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <table class="table table-sm o_main_table mt-4">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_description" class="text-start">Description</th>
                        <th name="th_note" class="text-start">Note</th>
                        <th name="th_quantity" class="text-end">Quantity</th>
                        <th name="th_priceunit" class="text-end">Unit Price</th>
                        <th name="th_subtotal" class="text-end">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="doc.order_line_ids" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" />
                        <tr class="bg-200 fw-bold fst-italic o_line_note">
                            <td name="td_name"><span t-field="line.product_id.name"/></td>
                            <td name="td_note"><span t-field="line.note"/></td>
                            <td name="td_quantity" class="text-end">
                                <span t-field="line.product_uom_qty"/>
                                <span t-field="line.product_uom"/>
                            </td>
                            <td name="td_priceunit" class="text-end">
                                <span t-field="line.price"/>
                            </td>
                            <td name="td_subtotal" class="text-end o_price_total">
                                <span t-field="line.price_subtotal" />
                            </td>
                        </tr>
                    </t>
                     <tr class="is-subtotal text-end">
                            <td name="td_section_subtotal" colspan="99">
                                <strong class="mr16">Total</strong>
                                <span
                                    t-out="current_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                />
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
        <div>
            <p t-field="doc.note" name="order_note"/>   
        </div>
    </t>
</template>


<template id="report_pedidosorder">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="pedidos.report_pedidos_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="pedidos_report_saleorder_inherit" inherit_id="sale.report_saleorder_document">
    <xpath expr="//td[@name='td_name']/span" position="replace">
        <span t-field="line.product_id.name"/>
    </xpath>
</template>


</odoo>
